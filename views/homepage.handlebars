{{#if logged_in}}
<section class="container mt-4">
    {{#each posts}}
    <article class="card mb-4">
        <div class="card-header">
            <h2><a href="/api/post/{{this.id}}">{{this.post_title}}</a></h2>
        </div>
        <div class="card-body">
            <p class="card-text">{{this.post_text}}</p>
            <p class="card-text">Written by: {{this.user.username}}</p>
            <p class="card-text">Created on: {{format_date this.createdAt}}</p>
        </div>
    </article>
    {{/each}}
    {{#unless posts}}
    <p class="'alert alert.info" role="alert">No posts yet.</p>
    {{/unless}}
</section>
{{else}}
<div class="alert alert-warning" role="alert">
    <p>You need to log in to view the posts.</p>
</div>
{{/if}}

<script src="/js/logout.js"></script>