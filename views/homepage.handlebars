{{#if logged_in}}
<section>
    {{#each posts}}
    <article>
        <h2><a href="/api/post/{{this.id}}">{{this.post_title}}</a></h2>
        <p>{{this.post_text}}</p>
        <p>Written by: {{this.user.username}} Created on: {{format_date this.createdAt}}</p>
    </article>
    {{/each}}
    {{#unless posts}}
    <p>No posts yet.</p>
    {{/unless}}
</section>
{{else}}
<p>You need to log in to view the posts.</p>
{{/if}}
<script src="/js/logout.js"></script>